<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>OnRails</PackageId>
        <Description>Simple and powerful Railway Oriented library for C#</Description>
        <PackageTags>Functional; Railway;</PackageTags>
        <Authors>Payadel Team</Authors>
        <PackageProjectUrl>https://github.com/Payadel/OnRails</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Payadel/OnRails</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

</Project>